<h1>Songs</h1>
<p>Search for songs here.</p>

<%= form_tag("/songs", method: "get") do %>
  <%= text_field_tag :q, params[:q] %>
  <%= submit_tag("Search") %>
<% end %>
<br />


<h3>Search Results</h3>
<table>
	<tr>
		<th>Name</th>
		<th>Artist</th>
		<th>Album</th>
		<th>+ Add Song</th>
	</tr>
	<% @results.each do |song| %>
	<tr>
		<td><%= song["trackName"] %></td>
		<td><%= song["artistName"] %></td>
		<td><%= song["collectionName"] %></td>
		<td></td>
	</tr>
	<% end %>
</table>

<%= params.inspect %>

